// CSS borrowed from http://designmodo.com/demo/css3accordionmenu/#one
.accordion-menu {
    margin: 0;
    padding: 0;
    border: none;
    outline: none;

    &__item {
        list-style: none;
        margin: 0;
        padding: 0;
        border: none;
        outline: none;
    }

    &__link {
        display: block;
        position: relative;
        min-width: 110px;
        padding: 0 10px 0 40px;
        height: 32px;

        cursor: pointer;

        color: #fdfdfd;
        font: bold 12px/32px Arial, sans-serif;
        text-decoration: none;
        text-shadow: 0px 1px 0px rgba(0, 0, 0, .35);

        background: #6c6e74;
        background: linear-gradient(top, #6c6e74 0%, #4b4d51 100%);

        box-shadow: inset 0px 1px 0px 0px rgba(255, 255, 255, .1), 0px 1px 0px 0px rgba(0, 0, 0, .1);
    }

    &__item_disabled  {

        .accordion-menu {

            &__num {
                background-color: #6f6f6f;
            }

            &__link {
                cursor: auto;
                color: #bebebe;
                text-shadow: 1px 1px 1px rgba(255, 255, 255, .2);
                background: #848484;
                background: linear-gradient(top, #848484 0%, #959595 100%);
            }

        }

    }


    &__num {
        display: block;
        position: absolute;
        top: 7px;
        right: 0;
        padding: 0 10px;
        margin-right: 10px;

        font: normal bold 12px/18px Arial, sans-serif;
        background: #404247;

        border-radius: 15px;

        box-shadow: inset 1px 1px 1px rgba(0, 0, 0, .2), 1px 1px 1px rgba(255, 255, 255, .1);
    }

    &__item_current {

        .accordion-menu {

            &__link {
                color: #3e5706;
                text-shadow: 1px 1px 1px rgba(255, 255, 255, .2);
                background: #a5cd4e;
                background: linear-gradient(top, #a5cd4e 0%, #6b8f1a 100%);
            }

            &__num {
                color: #fdfdfd;
                text-shadow: 0px 1px 0px rgba(0, 0, 0, .35);
                background: #3e5706;
            }

            &__sub-menu {
                height: 98px;
            }

        }

    }

    &__sub-menu {
        height: 0;
        overflow: hidden;
        margin: 0;
        padding: 0;
        border: none;
        outline: none;

        transition: height .2s ease-in-out;
    }

    &__sub-item {

        .accordion-menu {

            &__link {
                color: #797979;
                text-shadow: 1px 1px 0px rgba(255, 255, 255, .2);

                background: #e5e5e5;
                border-bottom: 1px solid #c9c9c9;

                box-shadow: inset 0px 1px 0px 0px rgba(255, 255, 255, .1), 0px 1px 0px 0px rgba(0, 0, 0, .1);
            }

            &__num {
                color: #797979;
                text-shadow: 1px 1px 0px rgba(255, 255, 255, .2);
                background: transparent;
                border: 1px solid #c9c9c9;

                box-shadow: none;
            }

            &__i {
                position: absolute;
                top: 0;
                left: 0;
                margin-left: 14px;
                color: #a6a6a6;
                font: normal 10px/32px Arial, sans-serif;
            }

        }

    }

}
