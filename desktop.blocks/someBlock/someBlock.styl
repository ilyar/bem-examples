.someBlock {
    font-family: Tahoma, Arial, Helvetica, sans-serif;
    font-size: 14px;
    color: #404040;

    border: 2px;
    background-color: #F7F7F7;
    box-shadow: rgba(0, 0, 0, 0.298039) 0px 2px 2px 0px;
    padding: 30px;
    width: 300px;

    &__question, &__content {
        font-style: italic;
        margin-top: 20px;
        font-size: 16px;
        text-align: center;
    }

}
